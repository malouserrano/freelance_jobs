<% provide(:title, 'Active Jobs') %>
<%= render 'users/index_sidebar' %>
  <div class="col-md-8">

  <% if current_user.employer? %>
    <section class="user_info">
        <h4>Work In Progress</h4>
        <table>
          <thead>
            <tr>
              <th>Job Name</th>
              <th>Freelancer</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
          <% if @active_jobs.any? %>
            <% @active_jobs.each do |job| %>
              <% if job.accepted? %>
                <tr id="job-<%= job.id %>">
                  <td><%= job.job_post.name %></td>
                  <% if job.sender.user_type == "Freelancer" %>
                  <td><%= link_to job.sender.name,
                          freelancer_profile_path(job.sender.id) %></td>
                  <% else %>
                  <td><%= link_to job.recipient.name,
                          freelancer_profile_path(job.recipient.id) %></td>
                  <% end %>
                  <td><%= job.status = "In progress" %></td>
                  <td><%= link_to 'Finish Job', complete_active_job_path(job.id),
                                  data: { confirm: 'Are you sure you want to complete this job?' }%>
                  </td>
                </tr>
              <% end %>
            <% end %>
          <% else %>
            <tr><td colspan="4">There are currently no active jobs</td></tr>
          <% end %>
          </tbody>
        </table>
    </section>

  <% else %>

  <section class="user_info">
      <h4>Current Work</h4>
      <table>
        <thead>
          <tr>
            <th>Job Name</th>
            <th>Employer</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
        <% if @active_jobs.any? %>
          <% @active_jobs.each do |job| %>
            <% if job.accepted? %>
              <tr id="job-<%= job.id %>">
                <td><%= job.job_post.name %></td>
                <% if job.sender.user_type == "Employer" %>
                <td><%= link_to job.sender.name,
                        employer_profile_path(job.sender.id) %></td>
                <% else %>
                <td><%= link_to job.recipient.name,
                        employer_profile_path(job.recipient.id) %></td>
                <% end %>
                <td><%= job.status = "In progress" %></td>
              </tr>
            <% end %>
          <% end %>
        <% else %>
          <tr><td colspan="3">There are currently no active jobs</td></tr>
        <% end %>
        </tbody>
      </table>
  </section>
  <% end %>

  </div>
</div>
