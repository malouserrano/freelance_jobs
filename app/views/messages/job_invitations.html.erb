<% provide(:title, "Job Invitations") %>
<%= render 'users/index_sidebar' %>

<div class="col-md-8">
  <section class="user_info">
    <h4>Job Invitations</h4>
    <%= link_to 'Add New', messages_new_path, class:"btn btn-default btn-sm" %>
    <br><br>
    <ul class="job_posts">
      <li>
        <table>
          <thead>
            <tr>
              <th>Job Name</th>
              <th>Freelancer</th>
              <th>Message</th>
              <th>Status</th>
              <th colspan="2">Action</th>
            </tr>
          </thead>

          <tbody>
            <% if @messages.any? %>
            <% @messages.each do |message| %>
              <tr id="message-<%= message.id %>">
                <td><%= message.job_post.name %></td>
                <td><%= message.recipient.name %></td>
                <td><%= message.content %></td>
                <td><%= message.status %></td>
                <td><%= link_to 'Edit', "#" %></td>
                <td><%= link_to 'Cancel', "#" %></td>
              </tr>
            <% end %>
            <% else %>
              <tr><td colspan="5">There are currently no job invitations</td></tr>
            <% end %>
          </tbody>
        </table>
      </li>
    </ul>
  </section>
</div>
