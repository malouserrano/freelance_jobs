<% provide(:title, 'New Job Invitation') %>
<%= render 'users/index_sidebar' %>

<% if current_user.employer? %>
  <div class="col-md-6">
    <h3>New Job Invitation</h3><br>

    <%= form_for(@message) do |f| %>
      <%= render 'shared/message_error_messages' %>

      <%= f.text_field :sender_id, value: current_user.id, type: "hidden" %>

      <%= f.label "Freelancer" %>
      <%= f.select(:recipient_id, @freelancer.collect { |p| [p.name,p.id]}) %>

      <%= f.label "Job Post" %>
      <%= f.select(:job_post_id, @job_post.collect{ |p| [p.name, p.id]}) %>

      <%= f.label "Message" %>
      <%= f.text_area :content, class: 'form-control', placeholder: 'Your message for the freelancer' %>

      <%= f.submit 'Send', class: "btn btn-primary" %>
    <% end %>
  </div>

<% else %>

<div class="col-md-6">
  <h3>New Job Application</h3><br>

  <%= form_for(@message) do |f| %>
    <%= render 'shared/message_error_messages' %>

    <%= f.text_field :sender_id, value: current_user.id, type: "hidden" %>

    <%= f.label "Job Post" %>
    <%= f.select(:job_post_id, @job_post_all.map{ |p| [p.name, p.id]}) %>

    <%= f.label "Message" %>
    <%= f.text_area :content, class: 'form-control', placeholder: 'Your message for the employer' %>

    <%= f.submit 'Send', class: "btn btn-primary" %>
  <% end %>
</div>
<% end %>
