<% provide(:title, "Employers") %>
<div class="row">
  <aside class="col-md-8">
    <section class="user_info">
      <h1>
        Freelancers (<%= @employers.count %>)
      </h1>
        <% @employers.each do |f| %>
          <ul class="job_posts">
              <li id="user-<%= f.id %>">
                Name: <%= link_to f.name, employer_profile_path(f.id)%><br>
                Brief Intro: <%= f.brief_intro %><br>
                Summary: <%= f.summary %><br>
                Skills: <%= f.skills %><br>
                Location: <%= f.location %><br>
              </li>
          </ul>
        <% end %>
    </section>
  </aside>
</div>
