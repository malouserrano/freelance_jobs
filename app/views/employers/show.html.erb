<% provide(:title, @employer.name) %>
<div class="row">
  <div class="col-md-8">
    <section class="user_info">
        <h4>User Profile</h4>
          <strong>Name:</strong> <%= @employer.name %><br>
          <strong>Address:</strong>
          <% if @employer.address.nil? %>
          <% else %>
          <%= @employer.address.join %>
          <% end %>
          <br>
          <strong>Company:</strong> <%= @employer.company %><br>
          <strong>Job Title:</strong> <%= @employer.job_title %><br>
    </section><br>
    <section class="user_info">
        <h4>Reviews</h4><br>
        <table>
          <thead>
            <tr>
              <th>Job Post</th>
              <th>Freelancer</th>
              <th>Message</th>
              <th>Rating</th>
            </tr>
          </thead>

          <tbody>
              <% @employer.reviews.each do |r| %>
                  <tr id="r-<%= r.id %>">
                    <td><%= r.job_application.post.name %></td>
                    <td><%= r.reviewer.name %></td>
                    <td><%= r.content %></td>
                    <td><%= r.rating %></td>
                  </tr>
              <% end %>
          </tbody>
        </table>
    </section><br><br>
  </div>
</div>
