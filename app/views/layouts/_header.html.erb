<header class="navbar navbar-fixed-top navbar-default">
  <div class="container">
    <% if logged_in? %>
    <% if current_user.employer? %>
      <%= link_to "Freelance Jobs", dashboard_path, id: "logo" %>
    <% else %>
      <%= link_to "Freelance Jobs", applications_path, id: "logo" %>
    <% end %>
    <% else %>
    <%= link_to "Freelance Jobs", root_path, id: "logo" %>
    <% end %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
        <% if current_user.employer? %>
          <li><%= link_to "Dashboard", dashboard_path %></li>
        <% else %>
          <li><%= link_to "Dashboard", applications_path %></li>
        <% end %>
          <li><%= link_to "Freelancers", freelancers_url %></li>
          <li><%= link_to "Jobs", job_posts_url %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", '#' %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Login", login_path %></li>
          <li><%= link_to "Register", register_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
