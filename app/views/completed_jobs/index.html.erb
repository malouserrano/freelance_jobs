<% provide(:title, 'Active Jobs') %>
<%= render 'users/index_sidebar' %>
  <div class="col-md-8">
  <% if current_user.employer? %>
    <section class="user_info">
        <h4>Completed Jobs</h4>
        <table>
          <thead>
            <tr>
              <th>Job Name</th>
              <th>Freelancer</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
          <% if @completed_jobs.any? %>
            <% @completed_jobs.each do |completed| %>
              <% if completed.completed? %>
                <tr id="completed-<%= completed.id %>">
                  <td><%= completed.job_post.name %></td>
                  <% if completed.sender.user_type == "Freelancer" %>
                  <td><%= link_to completed.sender.name,
                          freelancer_profile_path(completed.sender.id) %></td>
                  <% else %>
                  <td><%= link_to completed.recipient.name,
                          freelancer_profile_path(completed.recipient.id) %></td>
                  <% end %>
                  <td><%= completed.status %></td>
                  <td><%= link_to 'Rate Freelancer', "#"%></td>
                </tr>
              <% end %>
            <% end %>
          <% else %>
            <tr><td colspan="4">There are currently no completed jobs</td></tr>
          <% end %>
          </tbody>
        </table>
    </section>
  <% else %>
    <section class="user_info">
        <h4>Past Jobs</h4>
        <table>
          <thead>
            <tr>
              <th>Job Name</th>
              <th>Employer</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
          <% if @completed_jobs.any? %>
            <% @completed_jobs.each do |completed| %>
              <% if completed.completed? %>
                <tr id="completed-<%= completed.id %>">
                  <td><%= completed.job_post.name %></td>
                  <% if completed.sender.user_type == "Employer" %>
                  <td><%= link_to completed.sender.name,
                          employer_profile_path(completed.sender.id) %></td>
                  <% else %>
                  <td><%= link_to completed.recipient.name,
                          employer_profile_path(completed.recipient.id) %></td>
                  <% end %>
                  <td><%= completed.status %></td>
                  <td><%= link_to 'Rate Employer', "#"%></td>
                </tr>
              <% end %>
            <% end %>
          <% else %>
            <tr><td colspan="4">There are currently no completed jobs</td></tr>
          <% end %>
          </tbody>
        </table>
    </section>
  <% end %>
  </div>
</div>
