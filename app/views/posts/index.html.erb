<% provide(:title, "Job Posts") %>
<div class="row">
  <div class="col-md-8">
    <section class="user_info">
      <h4>Job Posts</h4>
      <% if Post.open.any? %>
        <% Post.open.each do |j| %>
            <ul class="job_posts">
              <li id="job_post-<%= j.id %>">
                <span class="name"><h4><%= j.name %></h4></span>
                <span class="description"><strong>Employer:</strong> <%= link_to j.user.name, employer_profile_path(j.user.id)%></span><br>
                <span class="description"><strong>Description:</strong> <%= j.description %></span> <br>
                <span class="skills"><strong>Skills Required:</strong> <%= j.skills %></span> <br>
                <span class="budget"><strong>Budget:</strong> <%= j.budget %></span> per hour <br>
                <span class="hours_of_work"><strong>Hours of work:</strong> <%= j.hours_of_work %></span> hours/week <br>
                <span class="status"><strong>Status:</strong> <%= j.status %></span> <br>
                <span class="timestamp">
                  Posted <%= time_ago_in_words(j.created_at) %> ago.
                </span>
              </li>
            </ul>
        <% end %>
      <% else %>
        <h5><i>There are currently no job posts available</i></h5>
      <% end %>
    </section><br><br>
  </div>
</div>
