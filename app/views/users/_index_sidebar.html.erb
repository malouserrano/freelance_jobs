<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        Dashboard
      </h1>
    </section>
  </aside>
</div>
  <aside class="col-md-3">
    <section class="user_info">
      <h4>
        Welcome,<br><%= current_user.name %> <br>
      </h4>
      <ul>
        <% if current_user.employer? %>
        <li><%= link_to 'Job Posts', users_path %></li>
        <li><%= link_to 'Job Invitations', invitations_path %></li>
        <li><%= link_to 'Job Applicants', applications_path %></li>
        <% else %>
        <li><%= link_to 'Job Applications', applications_path %></li>
        <li><%= link_to 'Job Invitations', invitations_path %></li>
        <% end %>
      </ul>
      <br>
      <h1>Jobs</h1>
      <ul>
        <% if current_user.employer? %>
        <li><%= link_to 'Work In Progress', active_jobs_path %></li>
        <li><%= link_to 'Completed', completed_jobs_path %></li>
        <% else %>
        <li><%= link_to 'Current Work', active_jobs_path %></li>
        <li><%= link_to 'Past Jobs', completed_jobs_path %></li>
        <% end %>
      </ul>
    </section>
  </aside>
