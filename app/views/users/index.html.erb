<% provide(:title, "Dashboard") %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        Dashboard
      </h1>
    </section>
  </aside>
</div>
<div class="row">
  <aside class="col-md-3">
    <section class="user_info">
      <h4>
        Welcome,<br>
        <%= current_user.name %> <br>
      </h4>
    </section>
  </aside>

  <% if current_user.employer? %>
  <!-- JOB POSTS  -->
  <div class="col-md-8">
    <section class="user_info"> <br>
      <% if @job_posts.any? %>
        <h4>Job Posts (<%= @job_posts.count %>)</h4>
        <%= link_to 'Add New', job_posts_new_path, class:"btn btn-default" %>
        <br><br>
        <ul class="job_posts">
          <%= render @job_posts %>
        </ul>
        <%= will_paginate @job_posts_paginate %>
      <% end %>
    </section><br><br>
  </div>
  <% else %>

  <!-- JOB APPLICATIONS  -->
  <div class="col-md-8">
    <section class="user_info">
        <h4>Job Applications</h4>
    </section>
  </div>

  <% end %>

</div>
