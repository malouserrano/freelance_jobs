<% provide(:title, @user.name) %>
<div class="row">
  <div class="col-md-8">
    <section class="user_info">
        <h4>User Profile</h4>
          Name: <%= @user.name %><br>
          Brief Intro: <%= @user.brief_intro %><br>
          Summary: <%= @user.summary %><br>
          Skills: <%= @user.skills %><br>
          Location: <%= @user.location %><br>
          Rate: <%= @user.rate %> per hour
    </section><br>
    <% if @messages.any? %>
    <section class="user_info">
        <h4>Job History</h4>
        <%= render 'messages/job_history'  %>
    </section><br>
    <% end %>
    <section class="user_info">
        <h4>Reviews</h4>
    </section><br>
  </div>
</div>
