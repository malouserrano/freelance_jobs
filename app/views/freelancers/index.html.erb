<% provide(:title, "Freelancers") %>
<div class="row">
  <aside class="col-md-8">
    <section class="user_info">
      <h1>
        Freelancers
      </h1>
      <% User.freelancer.each do |f| %>
        <ul class="job_posts">
          <li id="user-<%= f.id %>">
            <strong>Name:</strong> <%= link_to f.name, user_path(f.id)%><br>
            <strong>Address:</strong>
            <% if f.address.nil? %>
            <% else %>
            <%= f.address.full_address %>
            <% end %>
            <br>
            <strong>Brief Intro:</strong> <%= f.brief_intro %><br>
            <strong>Summary:</strong> <%= f.summary %><br>
            <strong>Rate:</strong> <%= f.rate %> per hour
          </li>
        </ul>
      <% end %>
    </section>
  </aside>
</div>
